@page
@model WebApplication2.Pages.Measure.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TemperatureMeasurement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TemperatureMeasurement.Temperature" class="control-label"></label>
                <input asp-for="TemperatureMeasurement.Temperature" class="form-control" />
                <span asp-validation-for="TemperatureMeasurement.Temperature" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="TemperatureMeasurement.MeasureDate" class="control-label"></label>
                <input asp-for="TemperatureMeasurement.MeasureDate" class="form-control" />
                <span asp-validation-for="TemperatureMeasurement.MeasureDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TemperatureMeasurement.OfficeToday" /> @Html.DisplayNameFor(model => model.TemperatureMeasurement.OfficeToday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TemperatureMeasurement.OfficeTomorrow" /> @Html.DisplayNameFor(model => model.TemperatureMeasurement.OfficeTomorrow)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
